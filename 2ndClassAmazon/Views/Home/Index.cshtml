@{
}

@model BooksViewModel

<h2>Books:</h2>

@foreach (Book p in Model.Books)
{
    <h3>@p.Title</h3>
    <div class="card card-outline-primary m-1 p-1">
        <div class="bg-faded p-1">
            <h4>
                @p.Title
            </h4>
        </div>
        <div class="card-text p-1">Price: @p.Price</div>
        <div class="card-text p-1">Author: @p.Author</div>
        <div class="card-text p-1">Classification/Category: @p.Classification/@p.Category</div>
        <div class="card-text p-1">Page Count: @p.PageCount</div>
        <div class="card-text p-1">Publisher: @p.Publisher</div>
        <div class="card-text p-1">ISBN: @p.Isbn</div>

    </div>

    <br />
}

<div page-meh="@Model.PageInfo" page-action="Index" page-classes-enabled="true" page-class="btn" page-class-normal="btn-outline-dark"
     page-class-selected="btn-primary" class="btn-group pull-right m-1"></div>